<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.bolt.atry.MainActivity">


     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content">

     <ImageButton
        android:id="@+id/cam"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:layout_weight="1"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="2.5dp"
        android:background="@drawable/camera"
        android:onClick="cameraClick"
         tools:ignore="ContentDescription,RtlHardcoded"
         android:contentDescription="" />

     <ImageButton
        android:id="@+id/vio"
        android:layout_width="0dp"
        android:layout_height="180dp"
         android:layout_marginLeft="2.5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/video"
        android:onClick="videoClick"
         android:layout_weight="1"
         tools:ignore="ContentDescription,RtlHardcoded" />
     </LinearLayout>

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="#e2e2e2">


          <ImageView
              android:layout_marginLeft="25dp"
              android:layout_marginRight="25dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@drawable/gamepad"/>
          <TextView
              android:layout_width="match_parent"
              android:text="GAME"
              android:textSize="50dp"
              android:layout_height="match_parent" />
     </LinearLayout>

     <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content">

          <ImageButton
              android:id="@+id/nameGame"
              android:layout_width="0dp"
              android:layout_height="180dp"
              android:layout_weight="1"
              android:layout_marginLeft="5dp"
              android:layout_marginBottom="5dp"
              android:layout_marginTop="5dp"
              android:layout_marginRight="2.5dp"
              android:background="@drawable/idea"
              android:onClick="nameClick" />

          <ImageButton
              android:id="@+id/Fuse"
              android:layout_width="0dp"
              android:layout_height="180dp"
              android:layout_marginLeft="2.5dp"
              android:layout_marginBottom="5dp"
              android:layout_marginTop="5dp"
              android:layout_marginRight="5dp"
              android:background="@drawable/link"
              android:onClick="fuseClick"
              android:layout_weight="1"
              tools:ignore="ContentDescription,RtlHardcoded" />
     </LinearLayout>



</LinearLayout>
